---
import ButtonPrimary from "./ButtonPrimary.astro";
import ButtonWithIcon from "./ButtonWithIcon.astro";
---

<div
  class="max-w-[1000px] md:flex md:flex-col md:justify-center mx-auto relative px-[2rem] my-10 md:mb-20"
>
  <img
    class="w-[280px] md:w-[400px] right-0 lg:-right-5 top-[25px] md:top-[10px] z-[-1] absolute opacity-75"
    src="/images/bg-doodle.svg"
    alt="Background doodle"
  />

  <img
    width="300px"
    class="absolute sm:w-[330px] lg:w-[360px] hidden md:block right-0 top-[20px]"
    src="/images/hero-image.svg"
    alt="Hand with phone image"
  />

  <h1 class="text-8xl mb-1 text-typodark">Cools</h1>
  <h3 class="mb-5 max-w-[420px] md:mb-10 md:text-4xl text-xl text-[#a1a1a1]">
    Collection of useful unit tools that you can use to convert everything you
    need
  </h3>
  <div class="w-full flex flex-col sm:flex-row sm:w-1/2 md:pb-10 gap-3">
    <ButtonPrimary
      btnText="Explore"
      btnColor="#A8EB53"
      url="#tools"
      textColor="#242424"
    />
    <ButtonWithIcon
      btnText="Visit github"
      btnColor="#242424"
      url="https://github.com/bbulakh/unit-converter-tools"
      textColor="white"
    >
      <Fragment>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="32"
          viewBox="0 0 16 16"
          ><path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59c.4.07.55-.17.55-.38c0-.19-.01-.82-.01-1.49c-2.01.37-2.53-.49-2.69-.94c-.09-.23-.48-.94-.82-1.13c-.28-.15-.68-.52-.01-.53c.63-.01 1.08.58 1.23.82c.72 1.21 1.87.87 2.33.66c.07-.52.28-.87.51-1.07c-1.78-.2-3.64-.89-3.64-3.95c0-.87.31-1.59.82-2.15c-.08-.2-.36-1.02.08-2.12c0 0 .67-.21 2.2.82c.64-.18 1.32-.27 2-.27c.68 0 1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82c.44 1.1.16 1.92.08 2.12c.51.56.82 1.27.82 2.15c0 3.07-1.87 3.75-3.65 3.95c.29.25.54.73.54 1.48c0 1.07-.01 1.93-.01 2.2c0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8"
          ></path></svg
        >
      </Fragment>
    </ButtonWithIcon>
  </div>
</div>
