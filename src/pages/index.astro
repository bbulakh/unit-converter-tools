---
import Layout from "../layouts/MainLayout.astro";
import Hero from "../components/HeroMain.astro";
import ToolCard from "../components/ToolCard.astro";
---

<Layout title="COOLS">
  <main>
    <Hero />

    <section
      id="tools"
      class="relative mt-10 bg-[#F4EEDB] py-[2rem] overflow-hidden"
    >
      <img
        class="absolute z-[0] top-[50%] rotate-45 min-w-[800px]"
        src="images/tools-bg-doodle.svg"
        alt="Background doodle"
      />
      <div class="max-w-[1000px] px-[2rem] mx-auto">
        <h2 class="text-8xl mb-5 text-[#242424]">TOOLS</h2>
      </div>

      <div
        class="max-w-[1000px] px-[2rem] mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3"
      >
        <ToolCard
          href="/currency-converter"
          heading="Currency converter"
          description="Simple currency converter with Open Exchange Rate API"
        >
          <Fragment>
            <img src="/images/currency-icon.svg" alt="Currency Icon" />
          </Fragment>
        </ToolCard>

        <ToolCard
          href="#"
          heading="Roman To Arabic"
          description="Simple currency converter with Open Exchange Rate API"
        >
          <Fragment>
            <img src="/images/currency-icon.svg" alt="Currency Icon" />
          </Fragment>
        </ToolCard>

        <ToolCard
          href="#"
          heading="Arabic to Roman"
          description="Simple currency converter with Open Exchange Rate API"
        >
          <Fragment>
            <img src="/images/currency-icon.svg" alt="Currency Icon" />
          </Fragment>
        </ToolCard>

        <ToolCard
          href="#"
          heading="Currency converter"
          description="Simple currency converter with Open Exchange Rate API"
        >
          <Fragment>
            <img src="/images/currency-icon.svg" alt="Currency Icon" />
          </Fragment>
        </ToolCard>

        <ToolCard
          href="#"
          heading="Currency converter"
          description="Simple currency converter with Open Exchange Rate API"
        >
          <Fragment>
            <img src="/images/currency-icon.svg" alt="Currency Icon" />
          </Fragment>
        </ToolCard>

        <ToolCard
          href="#"
          heading="Currency converter"
          description="Simple currency converter with Open Exchange Rate API"
        >
          <Fragment>
            <img src="/images/currency-icon.svg" alt="Currency Icon" />
          </Fragment>
        </ToolCard>
      </div>
    </section>
  </main>
</Layout>
