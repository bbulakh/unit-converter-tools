---
import ToolLayout from "../layouts/ToolLayout.astro";
import HeroTool from "../components/HeroTool.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import DecimalBinary from "../components/tools/DecimalBinary.vue";
import ToolCardHorizontal from "../components/ToolCardHorizontal.astro";
---

<ToolLayout title="Decimal to Binary Converter">
  <HeroTool
    toolName="Decimal to Binary"
    toolInfo="Tool that helps you to convert your decimal number to binary and vise versa"
    
  ><Fragment><Breadcrumbs currentPage="Decimal To Binary" /></Fragment></HeroTool>

  <section>
    <DecimalBinary client:load />
  </section>

  <section class="p-[2rem] max-w-[1000px] mx-auto">
    <h2 class="text-5xl mb-5">Try other <br /> tools</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
      <ToolCardHorizontal
        href="/"
        heading="Arabic to Roman"
        description="With this tool you can convert your dull 1999 to beautiful MCMXCIX"
      >
        <Fragment>
          <img src="/images/arabic-icon.svg" alt="Currency Icon" />
        </Fragment>
      </ToolCardHorizontal>

      <ToolCardHorizontal
        href="/"
        heading="Length converter"
        description="With this tool you can convert your dull 1999 to beautiful MCMXCIX"
      >
        <Fragment>
          <img src="/images/arabic-icon.svg" alt="Currency Icon" />
        </Fragment>
      </ToolCardHorizontal>

      <ToolCardHorizontal
        href="/"
        heading="Area Converter"
        description="With this tool you can convert your dull 1999 to beautiful MCMXCIX"
      >
        <Fragment>
          <img src="/images/arabic-icon.svg" alt="Currency Icon" />
        </Fragment>
      </ToolCardHorizontal>

      <ToolCardHorizontal
        href="/"
        heading="Decimal to Binary"
        description="With this tool you can convert your dull 1999 to beautiful MCMXCIX"
      >
        <Fragment>
          <img src="/images/arabic-icon.svg" alt="Currency Icon" />
        </Fragment>
      </ToolCardHorizontal>

      <ToolCardHorizontal
        href="/"
        heading="Arabic to Roman"
        description="With this tool you can convert your dull 1999 to beautiful MCMXCIX"
      >
        <Fragment>
          <img src="/images/arabic-icon.svg" alt="Currency Icon" />
        </Fragment>
      </ToolCardHorizontal>
    </div>
  </section>
</ToolLayout>
